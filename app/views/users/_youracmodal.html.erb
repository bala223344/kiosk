
  <%= form_for(@user, :url => { :action => "update" }) do |f| %>


  <!-- @@ Profile Edit Modal @e -->
                <div class="modal fade" tabindex="-1" role="dialog" id="profile-edit">
                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                        <div class="modal-content">
                            <a href="#" class="close" data-dismiss="modal"><em class="icon ni ni-cross-sm"></em></a>
                            <div class="modal-body modal-body-lg">
                                <h5 class="title">Update Profile</h5>
                                <ul class="nk-nav nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#contact">Contact</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#prefrences">Preferences</a>
                                    </li>
                                    
                                </ul><!-- .nav-tabs -->
                                <div class="tab-content">

                                 

                                    <div class="tab-pane" id="contact">
                                        <div class="row gy-4">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="first-name">First Name</label>

                                                      <%= f.text_field :fname,   :placeholder => "Owner's first name?", :class => "form-control  form-control-lg", :value => @user.fname %>

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="last-name">Last Name</label>

                                                       <%= f.text_field :lname,   :placeholder => "Owner's last name?", :class => "form-control  form-control-lg", :value => @user.lname %>


                                                 



                                                    
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="phone">Phone Number</label>
   <%= f.text_field :phone,   :placeholder => "Owner's phone number?", :class => "form-control form-control-lg phone-format", :value => @user.phone %>

                                                   
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="birth-day">Email Address</label>


                                                      <%= f.email_field :email,   :placeholder => "Owner's email address?", :class => "form-control form-control-lg", :value => @user.email %>


                                                    
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <ul class="align-center flex-wrap flex-sm-nowrap gx-4 gy-2">
                                                    <li>

                                                                                                                                      <%= f.submit "Save", :class => "btn btn-lg btn-primary" %>


                                                       
                                                    </li>
                                                    <li>
                                                        <a href="#" data-dismiss="modal" class="link link-light">Cancel</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div><!-- .tab-pane -->
                                    <div class="tab-pane" id="prefrences">
                                        <div class="row gy-4">

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="language">Language</label>
                                                    <select class="form-select" id="language" data-ui="lg">
                                                        <option>English (United States)</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">

                                                    <label class="form-label" for="time-zone">Time Zone</label>

                                                    
<%= f.select(:tz, options_for_select(all_tzs.invert),{}, {:class => "form-select"} ) %>


                                                  
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <ul class="align-center flex-wrap flex-sm-nowrap gx-4 gy-2">
                                                    <li>
                                                          <%= f.submit "Save", :class => "btn btn-lg btn-primary" %>
                                                    </li>
                                                    <li>
                                                        <a href="#" data-dismiss="modal" class="link link-light">Cancel</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div><!-- .tab-pane -->



                                </div><!-- .tab-content -->
                            </div><!-- .modal-body -->
                        </div><!-- .modal-content -->
                    </div><!-- .modal-dialog -->
                </div><!-- .modal -->

<% end %>
