$("#ajx-loader").addClass("hide")
<% if @response['errors'] != nil %>
  $(".payment-errors").html("<%=@response['errors'] %>").removeClass("hide")
  $('#rootwizard').find('.pager .previous').show();
<% elsif @response['status'] != nil %>
  $("#tab3").html('Thank you. Payment has been successfully made for the amount of USD <%= @response['amount']%> to <%= @response['title']%>.');
  $("#pager-cont").hide()
  $(".payment-info").html("Your payment reference id is : <%= @response['retref']%>").removeClass("hide")
  setTimeout(function(){  location.reload(); },10000);

<% end%>
